<form action="/query" hx-post="/query" method="POST" hx-target="this" hx-swap="outerHTML">
    <textarea name="querystring" rows="2" cols="80"
         tal:content="'querystring' in kwargs and querystring or default">Match p=(n) optional match p2=(n)-[r]->(m) return p,p2 limit 100</textarea>
    <input value="replace" type="submit">
    <div style="text-align: right">
        <span hx-get="/node_add" hx-target="#detail">Add node</span>
        <span hx-get="/edge_add" hx-target="#detail">Add edge</span>
    </div>

    <div tal:condition="session.get('resultset',{})" tal:omit-tag="">

        <div id="display" hx-swap-oob="true">
            <div hx-get="/display?display=${display_name|'resultset'}" hx-trigger="load"></div>
        </div>

        <div id="footer" hx-swap-oob="true">
            <br>
            <a hx-get="/display?display=resultset" hx-target='#display'>Resultset</a>&nbsp; &nbsp; &nbsp;
            <a hx-get="/display?display=3d" hx-target='#display'>3d</a>
            <span style="margin-left: 100ch">


            </span>
        </div>

    </div>
</form>