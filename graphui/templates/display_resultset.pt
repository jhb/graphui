<div metal:define-macro="display">
<h3>Resultset</h3>

    <h4>Nodes</h4>
    <div id="resultnodes">
        <div class="resultnode" tal:repeat="node resultdata['nodes']">
            <a hx-get="/node/${node.id}"
               hx-target="#detail"
               hx-trigger="click"><span metal:use-macro="templates['node_widget.pt'].macros.node"></span> </a>
        </div>

    </div>
    <div>&nbsp;</div>
    <h4>Edges</h4>
    <div id="resultedges">
        <div class="resultedge" tal:repeat="edge resultdata['edges']">
            <a hx-get="/edge/${edge.id}"
               hx-target="#detail"
               hx-trigger="click">
            <span tal:define='node edge.start_node' metal:use-macro="templates['node_widget.pt'].macros.node"></span>
            -[${edge.type}]->
            <span tal:define='node edge.end_node' metal:use-macro="templates['node_widget.pt'].macros.node"></span>
            </a> ${edge.id}
        </div>

    </div>
</div>